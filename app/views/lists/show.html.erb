<h1>List details for <%= @list.name %> </h1>

<h2>Bookmarks</h2>
<% @list.bookmarks.each do |bookmark| %>
  <p><%=bookmark.comment %></p>
  <p><%=bookmark.movie.title %></p>
  <p><%=bookmark.movie.overview %></p>

  <%= image_tag bookmark.movie.poster_url, :class => 'movie-img' %>
  <%= link_to "Remove", bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?" } %>
<% end %>


<%= link_to 'Back', lists_path %>

<%= link_to 'Add Bookmark', new_list_bookmark_path(@list) %>
